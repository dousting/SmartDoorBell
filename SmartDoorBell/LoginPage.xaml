<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartDoorBell.LoginPage">
    <StackLayout>
        <!-- Your login UI -->
        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Login" Clicked="LoginButton_Clicked" />
        <Button Text="Cancel" Clicked="CancelButton_Clicked" />

        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <!-- Theme switching buttons -->
            <Button Text="Light Theme" Clicked="OnLightThemeClicked" />
            <Button Text="Dark Theme" Clicked="OnDarkThemeClicked" />
        </StackLayout>
    </StackLayout>
</ContentPage>
