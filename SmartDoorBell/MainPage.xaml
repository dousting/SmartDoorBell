<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartDoorBell.MainPage">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
            <Button Text="Live" Clicked="LiveBtn_Clicked" Margin="5"/>
            <Button Text="Playback" Clicked="PlaybackBtn_Clicked" Margin="5"/>
            <Button Text="Add" Clicked="AddBtn_Clicked" Margin="5"/>
        </StackLayout>

        <StackLayout Grid.Row="2" Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
            <Button Text="Alarm" Clicked="AlarmBtn_Clicked" Margin="5"/>
            <Button Text="Access" Clicked="AccessBtn_Clicked" Margin="5"/>
            <Button Text="Back" Clicked="BackBtn_Clicked" Margin="5"/>
        </StackLayout>
    </Grid>

</ContentPage>
