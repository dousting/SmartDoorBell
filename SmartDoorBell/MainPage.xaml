<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartDoorBell.MainPage">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" HorizontalOptions="Center" 
            <Button Text="Live" Clicked="LiveBtn_Clicked" Margin="10"/>
            <Button Text="Add" Clicked="AddBtn_Clicked" Margin="10"/>
        </StackLayout>

        <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
            <Button Text="Alarm" Clicked="AlarmBtn_Clicked" Margin="10"/>
        </StackLayout>

        <StackLayout Grid.Row="2" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
            <Button Text="Open Camera" Clicked="OpenCameraButton_Clicked" Margin="10"/>
            
        </StackLayout>
    </Grid>

</ContentPage>
