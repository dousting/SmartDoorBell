<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartDoorBell.MainPage">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Background Image -->
        <Image Source="mp_net.jpg" Aspect="Center" Margin="250" />

        <!-- Live Image -->
        <StackLayout Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="live_icon.png" HeightRequest="100" WidthRequest="100" Margin="0, 20"/>
            <Button Text="Live" Clicked="LiveBtn_Clicked" Margin="22"/>
            <Button Text="Add" Clicked="AddBtn_Clicked" Margin="10"/>
        </StackLayout>

        <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
            <Button Text="Alarm" Clicked="AlarmBtn_Clicked" Margin="10"/>
        </StackLayout>

        <StackLayout Grid.Row="2" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
            <Button Text="Open Camera" Clicked="OpenCameraButton_Clicked" Margin="10"/>
        </StackLayout>
    </Grid>

</ContentPage>
